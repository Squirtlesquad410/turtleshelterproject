                <!-- Pagination Controls -->
                <div class="pagination">
                    <% if (currentPage > 1) { %>
                        <a href="/maintain-users?page=<%= currentPage - 1 %>">Previous</a>
                    <% } %>
                
                    <% for (let i = 1; i <= totalPages; i++) { %>
